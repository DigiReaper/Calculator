<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/operations"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:text="0+0"
            android:textColor="@color/black"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/Result"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="00000"
            android:textColor="@color/black"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_blue_red"
                android:onClick="ClearOnClick"
                android:padding="5dp"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:hapticFeedbackEnabled="true"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_orange_navy"
                android:textColor="@color/orange"
                android:textSize="@dimen/ButtonTextSize"
                android:text="()"
                android:padding="5dp"
                android:onClick="pOnClick"
                android:hapticFeedbackEnabled="true"


                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_red_green"
                android:textColor="@color/orange"
                android:textSize="@dimen/ButtonTextSize"
                android:text="^"
                android:padding="5dp"
                android:onClick="SquareOnClick"
                android:hapticFeedbackEnabled="true"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_pink_purp"
                android:textColor="@color/orange"
                android:textSize="@dimen/ButtonTextSize"
                android:text="/"
                android:padding="5dp"
                android:onClick="divideOnClick"
                android:hapticFeedbackEnabled="true"

                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:text="7"
                android:onClick="sevenOnClick"
                android:hapticFeedbackEnabled="true"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:text="8"
                android:onClick="eightOnClick"
                android:hapticFeedbackEnabled="true"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_purp_teal"
                android:padding="5dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:onClick="nineOnClick"
                android:hapticFeedbackEnabled="true"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_orange_pink"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:hapticFeedbackEnabled="true"
                android:text="X"
                android:padding="5dp"
                android:onClick="multiplyOnClick"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:hapticFeedbackEnabled="true"

                android:onClick="fourOnClick"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_purp_teal"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:onClick="fiveOnClick"
                android:hapticFeedbackEnabled="true"

                android:text="5"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:onClick="sixOnClick"
                android:hapticFeedbackEnabled="true"

                android:text="6"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_orange_blue"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:hapticFeedbackEnabled="true"

                android:onClick="subtractOnClick"
                android:text="-"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_purp_teal"
                android:text="1"
                android:textColor="@color/white"
                android:hapticFeedbackEnabled="true"

                android:textSize="@dimen/ButtonTextSize"
                android:onClick="oneOnClick"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:onClick="twoOnClick"
                android:hapticFeedbackEnabled="true"

                android:text="2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:onClick="threeOnClick"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_blue_purp"
                android:textColor="@color/orange"
                android:textSize="@dimen/ButtonTextSize"
                android:hapticFeedbackEnabled="true"

                android:onClick="addOnClick"
                android:text="+"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"

                android:background="@color/teal_200"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:onClick="dotOnClick"
                android:text="."/>


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/ButtonTextSize"
                android:onClick="zeroOnClick"
                android:hapticFeedbackEnabled="true"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="@color/black"
                android:text="="
                android:textColor="@color/white"
                android:textSize="40sp"
                android:onClick="equalsOnClick"
                android:hapticFeedbackEnabled="true"

                />


        </LinearLayout>



    </LinearLayout>



</LinearLayout>